{{#if products}}
<div class="row">
   <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
     <ul class="list-group">
       {{#each products}}
       <li class="list-group-item">
         <span class="badge">{{this.qty}}</span>
         <strong>{{this.item.title}}</strong>
         <span class="label label-success">${{this.price}}</span>
         <div class="btn-group">
            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
               <li><a href="/remove/{{this.item._id}}">Remove All</a></li>
            </ul>
         </div>
        
       </li>
       {{/each}}
     </ul>
   </div>
</div>

<div class="row">
   <div class="col-sm-3 col-md-3 col-md-offset-3 col-sm-offset-3">
     <strong>Total:{{totalPrice}}</strong>
   </div>
   <div class="col-sm-3 col-md-3 col-md-offset-3 col-sm-offset-3">
   <p> Add More Items Here.?</p>
   <a href="/" type="button" class="btn btn-success">View Items</a>
      
   </div>
</div>
<hr>
<div class="row">
   <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/checkout" class="btn btn-success" type="button">Check Out</a>
   </div>
</div>
{{else}}
<div class="row">
   <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    
   </div>
   <div class="col-md-8">
       <h2>No Item in Cart....Add Items to Cart..Hurry Up..!!</h2>
      <p>Do Want to Add Item TO Cart ? then Add Here....</p>
      <a href="/" type="button" class="btn btn-success">View Items</a>
    </div>
</div>
{{/if}}